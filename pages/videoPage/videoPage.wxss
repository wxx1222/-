/* 视频播放器样式  */
page {
  height: 100%;
  width: 100%;
  background-color: #F8F8F8;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  padding-bottom: 100rpx;
}
.videoContainer {
  flex: 1;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center; 
  padding: 0 15rpx;
  box-sizing: border-box;
}
.videoContainer video {
   max-height: 100% !important;
   max-width: 720rpx !important;
   min-height: 225px;
   min-width: 300px;
}
.close {
  position: fixed;
  left: 0;
  bottom: 0;
  right: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  border-top: 1rpx solid #ccc;
  color: #f66e3e;
  text-align: center;
  font-size: 30px;
  background-color: #e3e3e3;
}