page {
  background-color: #fff;
}
.my-info {
  width: 750rpx;
  height: 384rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
}

.my-info-center{
  height:300rpx;
  display:flex;
  flex-direction: column;
  justify-content:center;
  align-items:center;
}
.my-info-center .userinfo-avatar{
	width: 150rpx;
	height: 150rpx;
  border-radius: 50%;
  margin-bottom: 30rpx;
}

.weui-cells .weui-cell {
  height: 70rpx;
  font-size: 15pt;
  color: #353535;
  background-color: rgb(248, 248, 248);
}

.weui-cell__hd {
  width: 100rpx;
  text-align: center;
}
.weui-cell__hd .iconfont {
  font-size: 16pt;
  color: #F66E3E;
} 