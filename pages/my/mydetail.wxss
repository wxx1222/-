.formItem {
  margin: 10rpx 20rpx;
  display: flex;
  align-items: center;
  padding: 20rpx 10rpx;
  border-bottom: 1px solid #ccc;
  font-size: 13pt;
  color: #353535;
}
.formItem .iconfont {
    font-size: 23px;
    color: #F66E3E;
}
.formItem .image-small{
  flex: 1;
  text-align: center;
}
.formItem .my-info-right {
  flex: 3;
  text-align: right;
  padding-right: 30rpx;
}
.my-info-right image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.edit {
  padding: 80rpx 130rpx;
  border-radius: 23px;
}

.edit button {
  border-radius: 23px;
  background-color: #F66E3E;
  color: #fff;
  letter-spacing: 5px;
  font-weight: 500;
}

.edit .other-button-hover {
    background: #F66E2E;
    border-bottom: 1px solid #F66E4E;
    box-shadow: 1px 1px 1px #ccc;
    font-weight: 600;
}

/* 表单样式  */


.formItem input {
  flex: 3;
  font-size: 12pt;
}
.placeholderStyle {
  color: gray;
}
.formItem picker {
  flex: 3;
  font-size: 12pt;
  color: gray;
}
.submit {
  padding: 80rpx 0;
  display: flex;
  justify-content: space-around;
}
.submit button {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.submit .confirmBtn {
  border-radius: 40rpx;
  background-color: #F66E3E;
  color: #fff;
  letter-spacing: 5px;
  font-weight: 500;
}

.submit .other-button-hover {
    background: #F66E2E;
    border-bottom: 1px solid #F66E4E;
    box-shadow: 1px 1px 1px #ccc;
    font-weight: 600;
}

.submit .cancelBtn {
  border-radius: 40rpx;
  color:  #F66E3E;
  letter-spacing: 5px;
  font-weight: 500;
  border-color: #F66E3E;
}